<div class="contain-to-grid">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="#">RailsConf Scholarships</a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="">Menu</a></li>
    </ul>

    <section class="top-bar-section">
    <% if attendee_signed_in? %>
      <ul class="right">
        <li class="has-dropdown">
          <a href="#">
            <%= gravatar_tag current_attendee.email, :size => 20 %>
            <%= current_attendee.name %>
          </a>
          <ul class="dropdown">
            <li><%= link_to 'Sign out', destroy_attendee_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <ul class="right">
        <li><%= link_to 'Sign in', new_attendee_session_path %></li>
      </ul>
    <% end %>
    </section>
  </nav>
</div>
